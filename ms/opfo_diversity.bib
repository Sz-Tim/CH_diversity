journal = {Ecology and Evolution},
keywords = {Species-area relationship,abundance,density–area relationship,imperfect detection,incomplete spatial coverage,modelling,null model,random placement model,species richness estimator},
mendeley-tags = {abundance,modelling},
number = {14},
pages = {4836--4848},
title = {{Estimating species – area relationships by modeling abundance and frequency subject to incomplete sampling}},
volume = {6},
