journal = {Global Ecology and Biogeography},
keywords = {Ecological niche model,N-mixture model,SDMs,predictive biogeography,site occupancy model,spatial point process,species distribution model},
mendeley-tags = {SDMs},
number = {12},
pages = {1472--1484},
title = {{Accounting for imperfect detection and survey bias in statistical analysis of presence-only data}},
