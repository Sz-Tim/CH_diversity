doi = {10.1111/2041-210X.12738},
issn = {2041210X},
journal = {Methods in Ecology and Evolution},
keywords = {SDMs,imperfect detection,modelling,occupancy model,presence-background,sampling bias,site-occupany,spatial point process,species distribution models},
mendeley-tags = {SDMs,modelling},
number = {4},
pages = {420--430},
title = {{Integrated species distribution models: combining presence-background data and site-occupany data with imperfect detection}},
volume = {8},
year = {2017}
