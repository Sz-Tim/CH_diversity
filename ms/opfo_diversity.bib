doi = {10.1111/2041-210X.13378},
issn = {2041210X},
journal = {Methods in Ecology and Evolution},
keywords = {Chao estimator,SDMs,community richness,data augmentation,gamma diversity,imperfect detection,modelling,multi-species occupancy models,occupancy modelling,richness},
