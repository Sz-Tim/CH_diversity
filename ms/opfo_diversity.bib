journal = {ISPRS International Journal of Geo-Information},
keywords = {Dinamica EGO,Land use change scenarios,Modelling framework,Spatial dynamic modelling,Switzerland,habitat,land cover},
mendeley-tags = {habitat,land cover},
number = {4},
title = {{Spatial dynamic modelling of future scenarios of land use change in vaud and valais, western Switzerland}},
volume = {6},
year = {2017}
