issn = {14668238},
journal = {Global Ecology and Biogeography},
keywords = {Boosted regression trees,Kumaraswamy distribution,Macroecological models,Maximum likelihood,Poisson binomial distribution,Richness regression models,SDMs,Species richness,Stacked species distribution models},
mendeley-tags = {SDMs},
month = {sep},
